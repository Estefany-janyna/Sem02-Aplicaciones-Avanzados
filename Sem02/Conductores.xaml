<Window x:Class="Sem02.Conductores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sem02"
        mc:Ignorable="d"
        Title="Conductores" Height="450" Width="800">
    <Grid>
        <Grid Margin="20">
            <DataGrid x:Name="conductoresDataGrid" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Peso Máximo" Binding="{Binding PesoMaximo}"/>
                    <DataGridTextColumn Header="Placa" Binding="{Binding Placa}"/>
                    <DataGridTextColumn Header="Peso Vacío" Binding="{Binding PesoVacio}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

    </Grid>
</Window>
