<Window x:Class="Sem02.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sem02"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Username:"/>
            <TextBox x:Name="usernameTextBox"  Width="200" Margin="0 5"/>

            <TextBlock Text="Password:"/>
            <PasswordBox x:Name="passwordBox" Width="200" Margin="0 5"/>

            <Button Content="Login" Click="Login_Click" Width="100" Margin="0 10"/>
        </StackPanel>
    </Grid>
</Window>
