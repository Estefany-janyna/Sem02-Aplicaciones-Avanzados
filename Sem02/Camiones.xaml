<Window x:Class="Sem02.Camiones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sem02"
        mc:Ignorable="d"
        Title="Camiones" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="center">
            <TextBlock Text="Registro de Camiones" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0 0 0 10"/>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="Peso Máximo:" Width="100"/>
                <TextBox x:Name="pesoMaximoTextBox" MinWidth="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="Placa:" Width="100"/>
                <TextBox x:Name="placaTextBox" MinWidth="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="Peso Vacío:" Width="100"/>
                <TextBox x:Name="pesoVacioTextBox" MinWidth="200"/>
            </StackPanel>

            <Button Content="Guardar" Click="Guardar_Click" Width="100" HorizontalAlignment="Center" Margin="0 20"/>
        </StackPanel>
    </Grid>
</Window>
